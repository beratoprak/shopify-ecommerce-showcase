{% schema %}
{
  "name": "Modern Category Cards (Showcase)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Başlık",
      "default": "Kategoriler"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Alt başlık",
      "default": "Ürün gruplarını hızlıca keşfedin"
    }
  ],
  "presets": [
    { "name": "Modern Category Cards (Showcase)" }
  ]
}
{% endschema %}

<section class="modern-kategori-wrapper" data-section-id="{{ section.id }}">
  <div class="page-width">
    <header class="modern-kategori-header">
      <h2 class="modern-kategori-heading">{{ section.settings.heading }}</h2>
      <p class="modern-kategori-subheading">{{ section.settings.subheading }}</p>
    </header>

    <div class="modern-kategori-grid">
      {%- assign isimler = "Spices,Herbs,Teas,Oils,Vinegars" | split: "," -%}
      {%- assign koleksiyonlar = "spices,herbs,teas,oils,vinegars" | split: "," -%}

      {%- assign alt_kategori_linkleri =
        "packaged-spices,bulk-spices|
         packaged-herbs,bulk-herbs|
         herbal-teas,tea-bags,blends,winter-teas|
         packaged-oils,bottled-oils,essential-oils,carrier-oils|
         brand-a,brand-b,brand-c,brand-d" | split: "|"
      -%}

      {%- assign alt_kategori_isimleri =
        "Packaged Spices,Bulk Spices|
         Packaged Herbs,Bulk Herbs|
         Herbal Teas,Tea Bags,Tea Blends,Winter Teas|
         Packaged Oils,Bottled Oils,Essential Oils,Carrier Oils|
         Brand A,Brand B,Brand C,Brand D" | split: "|"
      -%}

      {% for isim in isimler %}
        {% assign i = forloop.index0 %}
        {% assign koleksiyon = koleksiyonlar[i] %}
        {% assign alt_isimler = alt_kategori_isimleri[i] | split: "," %}
        {% assign alt_linkler = alt_kategori_linkleri[i] | split: "," %}

        <article class="modern-kategori-kart" data-kart-index="{{ i }}">
          <div class="kategori-background">
            <!-- ✅ Showcase: görsel yerine gradient placeholder -->
            <div class="kategori-placeholder" aria-hidden="true"></div>
            <div class="kategori-overlay"></div>
          </div>

          <div class="kategori-content">
            <div class="kategori-header">
              <div class="header-left">
                <h3 class="kategori-title">{{ isim }}</h3>
              </div>

              <button class="kategori-toggle" type="button" aria-label="Toggle subcategories">
                <svg class="toggle-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="6 9 12 15 18 9" />
                </svg>
              </button>
            </div>

            <div class="kategori-altkategoriler">
              <div class="altkategoriler-grid">
                {% for alt in alt_isimler %}
                  <a href="#"
                     class="altkategori-item"
                     data-target="{{ alt_linkler[forloop.index0] | strip }}">
                    <span class="altkategori-dot"></span>
                    <span class="altkategori-text">{{ alt | strip }}</span>
                    <svg class="altkategori-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <line x1="5" y1="12" x2="19" y2="12"></line>
                      <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                  </a>
                {% endfor %}
              </div>

              <a href="#" class="tumunu-gor-btn" data-target="{{ koleksiyon }}">
                View All
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 16 16 12 12 8"></polyline>
                  <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
              </a>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

<style>
:root {
  --kategori-primary: #7B5E3A;
  --kategori-accent: #D4A574;
  --kategori-gold: #C9A868;
  --kategori-bg: #F5F0E8;
  --kategori-card: #FFFFFF;
  --kategori-text: #2F2A25;
  --kategori-shadow: rgba(123, 94, 58, 0.12);
}

.modern-kategori-wrapper {
  padding: 6rem 0;
  background: linear-gradient(135deg, var(--kategori-bg) 0%, #FFFFFF 100%);
}

.modern-kategori-header{
  margin-bottom: 2rem;
  text-align: left;
}
.modern-kategori-heading{
  font-size: 2.2rem;
  font-weight: 800;
  color: var(--kategori-text);
  margin: 0;
}
.modern-kategori-subheading{
  margin: .5rem 0 0;
  color: rgba(47,42,37,.75);
}

.modern-kategori-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 2rem;
  position: relative;
  align-items: start;
}

.modern-kategori-kart {
  position: relative;
  border-radius: 1.6rem;
  overflow: visible;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(212, 165, 116, 0.2);
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8px 24px var(--kategori-shadow);
}

.modern-kategori-kart:hover {
  transform: translateY(-12px) scale(1.02);
  box-shadow:
    0 20px 50px rgba(123, 94, 58, 0.25),
    0 0 0 1px var(--kategori-gold),
    0 0 40px rgba(201, 168, 104, 0.3);
  border-color: var(--kategori-gold);
  z-index: 10;
}

.kategori-background {
  position: absolute;
  top: 0; left: 0;
  width: 100%;
  height: 180px;
  overflow: hidden;
  border-radius: 1.6rem 1.6rem 0 0;
}

.kategori-placeholder{
  width:100%;
  height:100%;
  background: radial-gradient(circle at 20% 20%, rgba(212,165,116,.35), transparent 55%),
              radial-gradient(circle at 80% 30%, rgba(201,168,104,.35), transparent 50%),
              linear-gradient(135deg, rgba(123,94,58,.35), rgba(47,42,37,.85));
  transform: scale(1.05);
  transition: transform .7s cubic-bezier(0.4, 0, 0.2, 1);
}
.modern-kategori-kart:hover .kategori-placeholder{ transform: scale(1.15); }

.kategori-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(123, 94, 58, 0.25) 0%, rgba(47, 42, 37, 0.85) 100%);
  transition: opacity 0.4s ease;
}
.modern-kategori-kart:hover .kategori-overlay { opacity: 0.95; }

.kategori-content {
  position: relative;
  padding: 1.5rem;
  padding-top: 140px;
}

.kategori-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 1rem;
  padding-bottom: 1.2rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  transition: border-color 0.3s ease;
}
.kategori-header:hover { border-color: var(--kategori-gold); }

.header-left { flex: 1; }

.kategori-title {
  font-size: 1.8rem;
  font-weight: 800;
  color: #FFFFFF;
  margin: 0;
  line-height: 1.2;
  font-family: var(--font-heading-family);
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}
.kategori-header:hover .kategori-title {
  color: var(--kategori-gold);
  text-shadow: 0 0 20px rgba(201, 168, 104, 0.6);
}

.kategori-toggle {
  flex-shrink: 0;
  width: 36px; height: 36px;
  display: flex;
  align-items: center; justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border: 2px solid rgba(212, 165, 116, 0.3);
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 0;
}
.kategori-toggle:hover {
  background: linear-gradient(135deg, var(--kategori-gold), var(--kategori-accent));
  border-color: var(--kategori-gold);
  transform: rotate(180deg);
}
.kategori-toggle:hover .toggle-icon { color: white; }

.toggle-icon { color: var(--kategori-primary); transition: all 0.3s ease; }
.modern-kategori-kart.kart-active .toggle-icon { transform: rotate(180deg); }

.kategori-altkategoriler {
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  visibility: hidden;
  padding: 0;
  margin: 0;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}
.modern-kategori-kart.kart-active .kategori-altkategoriler {
  max-height: 800px;
  opacity: 1;
  visibility: visible;
  padding-top: 1.2rem;
}

.altkategoriler-grid {
  display: flex;
  flex-direction: column;
  gap: 0.7rem;
  margin-bottom: 1.2rem;
}

.altkategori-item {
  display: flex;
  align-items: center;
  gap: 0.8rem;
  padding: 0.8rem 1rem;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(8px);
  border: 1px solid rgba(212, 165, 116, 0.15);
  border-radius: 0.8rem;
  color: var(--kategori-text);
  text-decoration: none;
  font-weight: 600;
  font-size: 1.2rem;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}
.altkategori-item:hover {
  background: rgba(255, 255, 255, 0.95);
  border-color: var(--kategori-gold);
  transform: translateX(5px);
  box-shadow: 0 4px 12px rgba(201, 168, 104, 0.2);
}

.altkategori-dot {
  width: 6px; height: 6px;
  background: linear-gradient(135deg, var(--kategori-gold), var(--kategori-accent));
  border-radius: 50%;
  flex-shrink: 0;
  transition: transform 0.3s ease;
}
.altkategori-item:hover .altkategori-dot { transform: scale(1.5); }

.altkategori-text { flex: 1; }

.altkategori-arrow {
  opacity: 0;
  transform: translateX(-10px);
  transition: all 0.3s ease;
  color: var(--kategori-gold);
}
.altkategori-item:hover .altkategori-arrow { opacity: 1; transform: translateX(0); }

.tumunu-gor-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.6rem;
  width: 100%;
  padding: 1rem;
  background: linear-gradient(135deg, var(--kategori-primary) 0%, #6A4E3B 100%);
  color: white;
  border-radius: 1rem;
  font-weight: 700;
  font-size: 1.3rem;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(123, 94, 58, 0.3);
}
.tumunu-gor-btn:hover {
  background: linear-gradient(135deg, #6A4E3B 0%, var(--kategori-primary) 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(123, 94, 58, 0.4);
}
.tumunu-gor-btn svg { transition: transform 0.3s ease; }
.tumunu-gor-btn:hover svg { transform: translateX(5px); }

@media (max-width: 1200px) {
  .modern-kategori-grid { grid-template-columns: repeat(4, 1fr); }
}
@media (max-width: 990px) {
  .modern-kategori-grid { grid-template-columns: repeat(3, 1fr); gap: 1.5rem; }
}
@media (max-width: 749px) {
  .modern-kategori-wrapper { padding: 4rem 0; }
  .modern-kategori-grid { grid-template-columns: repeat(2, 1fr); gap: 1.2rem; }
  .kategori-background { height: 150px; }
  .kategori-content { padding: 1.2rem; padding-top: 120px; }
  .kategori-title { font-size: 1.6rem; }
  .altkategori-item { font-size: 1.1rem; padding: 0.7rem 0.9rem; }
}
@media (max-width: 480px) {
  .modern-kategori-grid { grid-template-columns: 1fr; }
}
</style>

<script>
(function () {
  var wrapper = document.querySelector('.modern-kategori-wrapper[data-section-id="{{ section.id }}"]');
  if (!wrapper) return;

  wrapper.querySelectorAll('.kategori-toggle').forEach(function (button) {
    button.addEventListener('click', function (e) {
      e.preventDefault();
      e.stopPropagation();

      var clickedCard = this.closest('.modern-kategori-kart');
      if (!clickedCard) return;

      wrapper.querySelectorAll('.modern-kategori-kart.kart-active').forEach(function (openCard) {
        if (openCard !== clickedCard) openCard.classList.remove('kart-active');
      });

      clickedCard.classList.toggle('kart-active');
    });
  });

  // Showcase: linkleri tıklayınca sayfa değiştirmesin (demo davranışı)
  wrapper.querySelectorAll('a[data-target]').forEach(function (a) {
    a.addEventListener('click', function (e) {
      e.preventDefault();
    });
  });
})();
</script>
